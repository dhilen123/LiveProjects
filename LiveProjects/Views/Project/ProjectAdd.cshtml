@model LiveProjects.Models.Project

@{
    ViewBag.Title = "Project";
}



<h3 class="mt-4">Create Project</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container border border-2 border-secondary rounded-2 w-75 mt-3 ms-0">
        <div class="row mt-4 ms-3">
            <div class="col-md-5">
                <div class="form-group fw-bold">
                    @Html.LabelFor(model => model.projName)
                    <label class="text-danger">*</label>
                    @Html.EditorFor(model => model.projName, new { htmlAttributes = new { @class = "form-control mt-2", placeholder = "Please Enter Project Name" } })
                    @Html.ValidationMessageFor(model => model.projName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @{
                        List<SelectListItem> data1 = ViewBag.Resourcelist;
                    }
                    @Html.LabelFor(model => model.projManager)<label class="text-danger">*</label>
                    @Html.DropDownListFor(model => model.projManager, data1, "---Select---", new { @class = "form-control mt-2" })
                    @Html.ValidationMessageFor(model => model.projManager, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @{
                        List<SelectListItem> data = ViewBag.Technologylist;
                    }
                    @Html.LabelFor(model => model.technology)
                    <label class="text-danger">*</label>
                    @Html.DropDownListFor(model => model.technology, data, "---Select---", new { @class = "form-control mt-2" })
                    @Html.ValidationMessageFor(model => model.technology, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="col-md-7">
                <div class="form-group fw-bold">
                    @Html.LabelFor(model => model.startdate)<label class="text-danger">*</label>
                    @Html.EditorFor(model => model.startdate, new { htmlAttributes = new { @class = "form-control mt-2", id = "startDate", @min = DateTime.Now.ToString("yyyy-MM-dd") } })
                    @Html.ValidationMessageFor(model => model.startdate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @Html.LabelFor(model => model.enddate)<label class="text-danger">*</label>
                    @Html.EditorFor(model => model.enddate, new { htmlAttributes = new { @class = "form-control mt-2", id = "endDate", @min = DateTime.Now.ToString("yyyy-MM-dd") } })
                    @Html.ValidationMessageFor(model => model.enddate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group fw-bold mt-3">
                    @Html.LabelFor(model => model.status)
                    <label class="text-danger">*</label><br />
                    <span class="fw-normal">
                        @Html.RadioButtonFor(model => model.status, "In Process", new { @class = "mt-2" })
                        @Html.Label("In Process")
                        @Html.RadioButtonFor(model => model.status, "Out Process", new { @class = "ms-2" })
                        @Html.Label("Out Process")
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger fw-bold" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-success ms-4 mb-3" />
                    <span><a href="GetAllProject" class="btn btn-primary ms-3 mb-3" role="button">Back to List</a></span>
                </div>
                <div class="form-group mt-4">
                </div>
            </div>
        </div>
    </div>
}




