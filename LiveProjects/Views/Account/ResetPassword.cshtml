@model LiveProjects.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<main aria-labelledby="title">
    <center> <h2 id="title">@ViewBag.Title</h2></center>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div style="display:flex; flex-direction:column; align-items:center; justify-content:center;" >
            <div>
                @Html.LabelFor(m => m.Email, new { @class = "col-form-label fw-bold" })
            </div>
            <div class="">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:300px;" })
            </div>
        
        
            <div>
                @Html.LabelFor(m => m.Password, new { @class = "col-form-label fw-bold mt-2" })
            </div>
            <div class="">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:300px;" })
            </div>
        
        
            <div>
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label fw-bold mt-2" })
            </div>
            <div class="">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "width:300px;" })
            </div>
        </div>
        <div class="row">
            <center>
                <div class=" col-md-10 mt-3">
                    <input type="submit" class="btn btn-primary" value="Reset" />
                </div>
            </center>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
