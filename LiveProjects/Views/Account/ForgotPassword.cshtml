@model LiveProjects.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<main aria-labelledby="title">
    <h2 style="text-align:center;" id="title">@ViewBag.Title</h2>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        <hr />
        <div >
            <div style="display:flex; align-items:center; justify-content:center;">
                <div style="margin-right:10px;">
                    @Html.LabelFor(m => m.Email, new { @class = " col-form-label fw-bold" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:300px;", @placeholder = "Enter your Email here" })
                </div>
            </div>
            <center>
                <div class="form-group">
                    @Html.ValidationSummary("", new { @class = "text-danger mt-2" })
                </div>
            </center>
        </div>
        <div class="row mt-3">
            <center>
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary text-white" value="Submit" />
                </div>
            </center>
        </div>
    }
</main>

