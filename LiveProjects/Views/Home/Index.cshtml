@model LiveProjects.Controllers.HomeController

@{
    ViewBag.Title = "Home Page";
}
<style>
    .recordd {
        font-size: 30px;
        padding: 40px;
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }
</style>

<h2>Dashboard</h2>
<div class="row">
    <div class="col-xl-4 col-md-6">
        <div class="card text-white mb-4 rounded-4" style="background-color: #798a73; border: 4px solid #aab4a6;">
            <div style="display:flex; align-items:center; justify-content:center;">
                <div class="card-body" style="font-size:25px;">Total Resources</div>
            <div class="card-body recordd">@ViewBag.TotalResources</div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Content("~/Resource/GetAllResource")">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6">
        <div class="card text-white mb-4 rounded-4" style="background-color: #b5bdc4; border: 4px solid #d2d7db;">
            <div style="display:flex; align-items:center; justify-content:center;">
                <div class="card-body" style="font-size:25px;">Total Projects</div>
            <div class="card-body recordd">@ViewBag.TotalProjects</div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Content("~/Project/GetAllProject")">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6">
        <div class="card text-white mb-4 rounded-4" style="background-color: #3f403c; border: 4px solid #848484;">
            <div style="display:flex; align-items:center; justify-content:center;">
                <div class="card-body" style="font-size:25px;">Total Allocations</div>
                <div class="card-body recordd">@ViewBag.TotalAllocations</div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="@Url.Content("~/Allocation/Allocation")">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>

</div>